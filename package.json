{
  "name": "lib",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**/*"
    ],
    "version": "independent"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "test": "jest",
    "test:dev": "jest --watch",
    "build": "lerna run build --include-dependencies",
    "dev": "lerna run dev --stream --parallel",
    "version:patch": "lerna version patch --yes --no-git-tag-version --no-push",
    "version:minor": "lerna version minor --yes --no-git-tag-version --no-push",
    "version:major": "lerna version major --yes --no-git-tag-version --no-push",
    "publish:lerna": "lerna publish from-package --no-private --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "^27.1.0",
    "jest-mock-extended": "^1.0.9",
    "lerna": "^4.0.0",
    "prettier": "1.19.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {}
}
